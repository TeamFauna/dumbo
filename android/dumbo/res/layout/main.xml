<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" >
    <ImageView
            android:adjustViewBounds="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/coverphoto"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/cover"
            android:longClickable="true"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/coverphoto"
            >
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button_identify"
                android:background="@drawable/button_identify"
                android:textColor="#FFFFFF"
                android:text="@string/identify_button_text"
                android:textStyle="bold"
                />
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                android:id="@+id/clip_button"
                android:src="@drawable/clip"
                />
        <ImageView
                android:layout_width="56dp"
                android:layout_height="31dp"
                android:id="@+id/mic_animation"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_microphone_0"
                android:scaleType="matrix"
                android:visibility="invisible"
                />
        <ImageView
                android:layout_width="56dp"
                android:layout_height="31dp"
                android:id="@+id/mic_animation_red"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_microphone_0_red"
                android:scaleType="matrix"
                android:visibility="invisible"
                />
    </RelativeLayout>
</RelativeLayout>

